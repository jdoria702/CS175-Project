<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BBD0FF">

    <!-- Top timer bar -->
    <View
        android:id="@+id/timeBar"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_alignParentTop="true"
        android:background="#FF5252" />

    <!-- Big, clear title at the top -->
    <TextView
        android:id="@+id/gameTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/timeBar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="TAP THE CORRECT WIRE!"
        android:textColor="#000000"
        android:textSize="26sp"
        android:textStyle="bold" />

    <!-- Shows which character is selected -->
    <TextView
        android:id="@+id/characterLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/gameTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold" />

    <!-- Center instruction text -->
    <TextView
        android:id="@+id/centerHint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:padding="12dp"
        android:text="Follow the prompt and tap the right wire."
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        android:background="#AA000000" />

    <!-- Wire container for shuffling -->
    <LinearLayout
        android:id="@+id/wireRow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:orientation="horizontal"
        android:gravity="center">

        <!-- Red wire -->
        <View
            android:id="@+id/wireRed"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginEnd="24dp"
            android:background="#F44336"
            android:clickable="true"
            android:focusable="true" />

        <!-- Blue wire -->
        <View
            android:id="@+id/wireBlue"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginEnd="24dp"
            android:background="#2196F3"
            android:clickable="true"
            android:focusable="true" />

        <!-- Green wire -->
        <View
            android:id="@+id/wireGreen"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="#4CAF50"
            android:clickable="true"
            android:focusable="true" />
    </LinearLayout>

</RelativeLayout>
